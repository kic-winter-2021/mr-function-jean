<?xml version="1.0" encoding="utf-8" ?>
<!-- /WEB-INF/decorators.xml -->
<!-- 레이아웃 jsp, 꾸밀 페이지들, 제외할 페이지들 -->
<decorators defaultdir="/layout">
	<decorator name="main" page="layout.jsp">
		<pattern>/</pattern>
	</decorator>
	<decorator name="admin" page="layout.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	<excludes>
		<pattern>/user/idsearch*</pattern>
		<pattern>/user/pwsearch*</pattern>
		<pattern>/board/imgupload*</pattern>
		<pattern>/ajax/*</pattern>
	</excludes>
</decorators>